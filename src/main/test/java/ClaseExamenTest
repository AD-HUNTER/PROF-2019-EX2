import org.junit.jupiter.api.Test;
import java.util.Arrays;
import java.util.List;

import static org.junit.jupiter.api.Assertions.*;

public class ClaseExamenTest {

    @Test
    public void testPrimos_n6() throws ClaseExamen.EntradaInvalida {
        // 6 = 2 * 3
        List<Integer> resultado = ClaseExamen.primos(6);
        List<Integer> esperado = Arrays.asList(2, 3);
        assertEquals(esperado, resultado);
    }

    @Test
    public void testPrimos_n13() throws ClaseExamen.EntradaInvalida {
        // 13 es primo
        List<Integer> resultado = ClaseExamen.primos(13);
        List<Integer> esperado = Arrays.asList(13);
        assertEquals(esperado, resultado);
    }

    @Test
    public void testPrimos_n15() throws ClaseExamen.EntradaInvalida {
        // 15 = 3 * 5
        List<Integer> resultado = ClaseExamen.primos(15);
        List<Integer> esperado = Arrays.asList(3, 5);
        assertEquals(esperado, resultado);
    }

    @Test
    public void testPrimos_n25() throws ClaseExamen.EntradaInvalida {
        // 25 = 5 * 5
        List<Integer> resultado = ClaseExamen.primos(25);
        List<Integer> esperado = Arrays.asList(5, 5);
        assertEquals(esperado, resultado);
    }

    @Test
    public void testPrimos_entradaInvalida() {
        // n = 1 es una entrada invÃ¡lida
        assertThrows(ClaseExamen.EntradaInvalida.class, () -> {
            ClaseExamen.primos(1);
        });
    }
}